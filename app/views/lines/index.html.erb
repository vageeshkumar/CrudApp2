<h1>Available Train Lines</h1>

<%= link_to "Add a new train line", new_train_line_url %>

<ol>
<% @lines.each do |line| %>
	<li>
		<%= link_to line.name, individual_train_url(line.id) %>
		<%= line.frequency %>
		<%= link_to 'Edit', edit_train_line_url(line.id) %>
		| <%= link_to 'Delete', individual_train_url(line.id), :method => :delete, :confirm => "Are you sure?" %>
	</li>
<% end %>
</ol>

